{
	"name": "atanas.info",
	"version": "1.1.0",
	"description": "Atanas Atanasov's Personal Website",
	"scripts": {
		"fetch-music": "ts-node ./src/assets/scripts/fetch-music.ts",
		"fetch-projects": "ts-node ./projects/.vuepress/fetch-projects.ts",
		"start-projects": "cd projects && vuepress dev",
		"build-projects": "cd projects && vuepress build",
		"localga": "localga --id UA-83446952-1 --folder ./src/assets/scripts",
		"svgo": "svgo -f static/images/svg --config=svgo.yml",
		"svg-sprite": "spritesh -q -i static/images/svg -o static/sprite.svg -p svg-",
		"svg": "yarn svgo && yarn svg-sprite",
		"tsc": "tsc --noEmit",
		"tsc:watch": "tsc --noEmit --watch",
		"css": "postcss ./src/index.pcss -o ./src/index.css",
		"css:watch": "postcss ./src/index.pcss -o ./src/index.css -w",
		"parcel-start": "parcel ./src/index.html",
		"parcel-build": "rm -rf dist && parcel build ./src/index.html --public-url '/'",
		"pre": "yarn yarn-deduplicate && yarn screenshots && yarn fetch-music && yarn localga && yarn svg",
		"start": "concurrently -r \"yarn css:watch\" \"yarn tsc:watch\" \"yarn parcel-start\"",
		"build": "yarn pre && yarn css && yarn tsc && yarn parcel-build && yarn fetch-projects && yarn build-projects",
		"test": "jest",
		"test:watch": "jest --watch",
		"lint": "npm run lint:ts && npm run lint:css",
		"lint:ts": "eslint 'src/**/*.{ts,tsx}'",
		"lint:css": "stylelint './src/**/*.pcss' --config .stylelintrc",
		"deduplicate": "yarn-deduplicate yarn.lock",
		"screenshots": "ts-node ./screenshots/index.ts",
		"ssr": "ts-node ./server/index.ts",
		"pwa": "create-pwa --icon static/images/icons/icon.png --launch static/images/icons/splash.png"
	},
	"keywords": [],
	"author": "Atanas Atanasov <scriptex.bg@gmail.com> (https://atanas.info)",
	"repository": "https://github.com/scriptex/atanas.info",
	"bugs": {
		"url": "https://github.com/scriptex/atanas.info/issues",
		"email": "scriptex.bg@gmail.com"
	},
	"license": "MIT",
	"engines": {
		"node": ">= 12.16.0",
		"npm": ">= 6.14.0"
	},
	"sw-precache": {
		"staticFileGlobs": [
			"dist/images/**/*",
			"dist/config.xml",
			"dist/manifest.webmanifest",
			"dist/resume.pdf",
			"dist/sprite.svg",
			"dist/**/*.css",
			"dist/**/*.css.map",
			"dist/**/*.js",
			"dist/**/*.js.map"
		],
		"stripPrefixMulti": {
			"dist/": "/"
		}
	},
	"jest": {
		"preset": "ts-jest",
		"moduleDirectories": [
			"node_modules",
			"src"
		],
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		],
		"moduleNameMapper": {
			"^@src/(.*)$": "<rootDir>/src/$1",
			"^@root/(.*)$": "<rootDir>/$1",
			"^@assets/(.*)$": "<rootDir>/src/assets/$1",
			"^@utilities": "<rootDir>/src/utilities",
			"^@components": "<rootDir>/src/components",
			"\\.(css|less|sass|scss)$": "<rootDir>/test-config/style-mock.js",
			"\\.(jpg|jpeg|png|gif|ico|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/test-config/file-mock.js"
		},
		"setupFiles": [
			"<rootDir>/test-config/index.js",
			"<rootDir>/test-config/local-storage-mock.js"
		],
		"snapshotSerializers": [
			"enzyme-to-json/serializer"
		],
		"transform": {
			"^.+\\.tsx?$": "ts-jest",
			"\\.(css|less|sass|scss)$": "<rootDir>/test-config/style-mock.js",
			"\\.(jpg|jpeg|png|gif|ico|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/test-config/file-mock.js"
		},
		"verbose": false,
		"testRegex": ".*\\.(test|spec)\\.(j|tsx?)$",
		"testPathIgnorePatterns": [
			"<rootDir>/node_modules/",
			"<rootDir>/dist/",
			"<rootDir>/test-config/"
		]
	},
	"dependencies": {
		"d3": "5.16.0",
		"itcss": "1.5.1",
		"react": "16.13.1",
		"react-dom": "16.13.1",
		"react-helmet": "6.1.0",
		"react-inlinesvg": "2.0.0",
		"webamp": "1.4.1-beta03"
	},
	"devDependencies": {
		"@hot-loader/react-dom": "16.13.0",
		"@types/compression": "1.7.0",
		"@types/d3": "5.7.2",
		"@types/enzyme": "3.10.5",
		"@types/express": "4.17.6",
		"@types/node": "14.0.13",
		"@types/node-fetch": "2.5.7",
		"@types/puppeteer": "3.0.0",
		"@types/react": "16.9.38",
		"@types/react-dom": "16.9.8",
		"@types/react-helmet": "6.0.0",
		"@types/react-router-dom": "5.1.5",
		"@typescript-eslint/eslint-plugin": "3.4.0",
		"@typescript-eslint/parser": "3.4.0",
		"autoprefixer": "9.8.4",
		"cheerio": "1.0.0-rc.3",
		"cloudinary": "1.22.0",
		"compression": "1.7.4",
		"concurrently": "5.2.0",
		"create-pwa": "2.3.0",
		"cssnano": "4.1.10",
		"dotenv": "8.2.0",
		"enzyme": "3.11.0",
		"enzyme-adapter-react-16": "1.15.2",
		"enzyme-to-json": "3.5.0",
		"eslint": "7.3.1",
		"eslint-config-prettier": "6.11.0",
		"eslint-plugin-jest": "23.17.1",
		"eslint-plugin-react": "7.20.0",
		"express": "4.17.1",
		"jest": "26.1.0",
		"localga": "2.0.0",
		"node-fetch": "2.6.0",
		"parcel-bundler": "1.12.4",
		"parcel-plugin-static-files-copy": "2.4.3",
		"parcel-plugin-sw-precache": "1.1.2",
		"parcel-plugin-typescript-paths": "0.1.14",
		"postcss-cli": "7.1.1",
		"postcss-custom-media": "7.0.8",
		"postcss-flexbugs-fixes": "4.2.1",
		"postcss-import": "12.0.1",
		"postcss-merge-rules": "4.0.3",
		"postcss-mixins": "6.2.3",
		"postcss-preset-env": "6.7.0",
		"prettier": "2.0.5",
		"puppeteer": "4.0.0",
		"react-imported-component": "6.2.1",
		"react-router-dom": "5.2.0",
		"spritesh": "1.2.1",
		"stylelint": "13.6.1",
		"stylelint-config-recommended": "3.0.0",
		"svgo": "1.3.2",
		"ts-jest": "26.1.1",
		"ts-node": "8.10.2",
		"typescript": "3.9.5",
		"vuepress": "1.5.2",
		"yarn-deduplicate": "2.0.0"
	},
	"browserslist": [
		"> 1%",
		"last 2 versions"
	],
	"main": "src/index.tsx",
	"private": true,
	"resolutions": {
		"@types/react": "16.9.38"
	}
}
