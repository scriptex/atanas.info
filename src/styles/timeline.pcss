.c-section--timeline {
	& .vertical-timeline {
		color: var(--color-secondary);
		text-align: left;
		margin-bottom: 1rem;

		&::before {
			background-color: var(--color-action);
		}
	}

	& .vertical-timeline-element-icon {
		background-color: var(--color-primary);
		box-shadow: 0 0 0 0.25rem var(--color-action), inset 0 0.125rem 0 rgba(0, 0, 0, 0.08),
			0 0.125rem 0 0.25rem rgba(0, 0, 0, 0.05);
	}

	& .vertical-timeline-element-subtitle {
		padding-bottom: 1.25rem;
		border-bottom: 0.25rem solid var(--color-action);
	}

	& .vertical-timeline-element-content {
		padding: 1rem;
		box-shadow: 0 0 0 0.25rem var(--color-action);
	}

	& .vertical-timeline-element-content-arrow {
		top: 16px !important;
		border-width: 1rem;
		border-right-color: var(--color-action);
	}

	& .vertical-timeline-element-date {
		text-align: left !important;
		position: static !important;
		top: auto !important;
		right: auto !important;
		left: auto !important;
	}
}

@media (--tablet-landscape) {
	.c-section--timeline {
		& .vertical-timeline-element-content-arrow {
			top: 0.625rem !important;
			border-width: 0.75rem;
		}
	}
}

@media (--mobile) {
	.c-section--timeline {
		& .vertical-timeline {
			margin-bottom: 0.5rem;
		}
	}
}
