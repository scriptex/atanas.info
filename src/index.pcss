				& object,
				& section {
					position: relative;
					top: auto;
					right: auto;
					left: auto;
					transform: none !important;
				}

				& section {
					min-height: 92px;
					@mixin flex-row wrap, center, center;
					align-content: center;
					opacity: 1;
					position: relative;
					z-index: 2;
					padding: 0.5rem;
					background-color: var(--color-secondary);
				}

				& strong {
					flex: 0 0 100%;
				}

				&:hover {
					box-shadow: none;
					background-size: 100% auto;
				}

				&:hover div {
					transform: none;
				}
			}
		}

		& .c-section__actions {
			padding-top: 0;
		}
	}
}

/* Section Slides & Section Videos */
.c-section--slides,
.c-section--videos {
	color: var(--color-secondary);
	text-align: center;
	position: relative;
	z-index: 2;
	padding: 9.25rem 0 4rem;
	background-attachment: fixed;

	& .o-shell {
		position: relative;
		z-index: 2;
	}

	& + .c-section--slides,
	& + .c-section--videos {
		margin-top: 4rem;
	}

	& h2 {
		text-align: center;
		margin-bottom: 4rem;
		@mixin slanted;
	}

	/* prettier-ignore */
	& iframe,
	& lite-youtube { /* stylelint-disable-line selector-type-no-unknown */
		max-width: none;
		width: 100%;
		height: 100%;
		display: block;
		position: absolute;
		z-index: 2;
		top: 0;
		left: 0;
		border: 0;
	}

	& .c-section__nav {
		padding-bottom: 1rem;

		& ul {
			@mixin flex-row wrap, center, center;
		}

		& li {
			padding: 0 1rem 1rem;

			&.current .c-btn {
				color: var(--color-action);
				background-color: var(--color-primary);
				cursor: default;
			}
		}
	}

	& .c-section__body {
		position: relative;
		padding-bottom: 3rem;

		&.o-grid {
			padding-bottom: 1.5rem;
		}
	}

	& .c-section__actions {
		text-align: center;
	}

	& .c-section__frame {
		height: 0;
		opacity: 0;
		visibility: hidden;
		position: absolute;
		top: 0;
		right: 0;
		left: 0;
		padding-bottom: 62.5%;
		transition: all var(--timing) var(--easing);

		& .c-loading {
			@mixin centered;
			z-index: 1;
		}

		&.current {
			position: relative;
			opacity: 1;
			visibility: visible;
		}
	}
}

.c-section--slides {
	&::before {
		@mixin overlay;
		opacity: 0.5;
		z-index: 1;
		background-color: var(--color-secondary);
	}
}

.c-section--videos {
	background-color: var(--color-secondary);
}

/* Section blog & Section articles */
.c-section--blog,
.c-section--articles {
	&::before {
		opacity: 0.5;
		background-color: var(--color-primary);
	}

	& .o-grid__item {
		position: relative;
	}
}

.c-article-link {
	color: var(--color-primary);
	text-align: center;
	text-decoration: none;
	height: 0;
	display: block;
	position: relative;
	z-index: 2;
	padding-bottom: 65%;
	overflow: hidden;
	background-size: auto 100%;
	transition: background-size var(--timing) var(--easing);

	& + .c-loading {
		@mixin centered;
		z-index: 1;
	}

	& strong {
		font-size: 1.25rem;
		opacity: 1;
		position: absolute;
		top: 50%;
		right: 0;
		left: 0;
		z-index: 2;
		transform: translateY(-50%);
		transition: all var(--timing) var(--easing);
	}

	&::before {
