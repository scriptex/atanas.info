}

.c-funding__backdrop {
	opacity: 0;
	display: block;
	position: fixed;
	top: 0;
	right: 0;
	bottom: 0;
	left: 0;
	z-index: 90;
	background-color: var(--color-secondary);
	transition: opacity var(--timing) var(--easing);
	pointer-events: none;
