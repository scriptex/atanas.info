{
	"compilerOptions": {
		"baseUrl": "./",
		"paths": {},
		"alwaysStrict": true,
		"allowSyntheticDefaultImports": true,
		"allowJs": false,
		"checkJs": false,
		"declaration": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"noEmitHelpers": true,
		"jsx": "react",
		"lib": ["dom", "ESNext"],
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"noEmit": false,
		"noEmitOnError": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noStrictGenericChecks": false,
		"strict": true,
		"strictBindCallApply": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true,
		"strictNullChecks": true,
		"pretty": true,
		"removeComments": false,
		"sourceMap": true,
		"resolveJsonModule": true
	},
	"compileOnSave": false,
	"include": [
		"bin/**/*.ts",
		"insights/**/*",
		"music/**/*.ts",
		"npm/**/*",
		"screenshots/**/*",
		"server/**/*",
		"src/**/*"
	],
	"exclude": ["node_modules", "src/scripts/analytics.js", "src/scripts/google-analytics-local.js"],
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	}
}
