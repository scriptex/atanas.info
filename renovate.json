{
	"extends": ["config:base", ":automergePatch", ":automergeMinor", ":automergeBranch", ":disableDependencyDashboard"],
	"assignees": ["@scriptex"],
	"labels": ["dependencies"],
	"rebaseWhen": "conflicted",
	"vulnerabilityAlerts": {
		"labels": ["security"],
		"assignees": ["@scriptex"]
	},
	"rangeStrategy": "replace",
	"major": {
		"automerge": false
	},
	"packageRules": [
		{
			"matchPackagePatterns": ["parcel"],
			"groupName": "parcel"
		},
		{
			"matchPackagePatterns": ["babylonjs"],
			"groupName": "babylonjs"
		}
	]
}
