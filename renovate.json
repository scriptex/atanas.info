{
	"extends": [
		"config:base",
		":automergePatch",
		":automergeMinor",
		":automergeBranch",
		"schedule:weekly",
		":disableDependencyDashboard"
	],
	"assignees": ["@scriptex"],
	"labels": ["dependencies"],
	"rebaseWhen": "conflicted",
	"vulnerabilityAlerts": {
		"labels": ["security"],
		"assignees": ["@scriptex"]
	},
	"rangeStrategy": "replace",
	"major": {
		"automerge": false
	},
	"packageRules": [
		{
			"matchPackagePatterns": ["babylonjs"],
			"groupName": "babylonjs"
		}
	]
}
