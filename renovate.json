{
	"extends": ["config:base", ":automergePatch", ":automergeMinor", ":automergeBranch", ":disableDependencyDashboard"],
	"assignees": ["@scriptex"],
	"labels": ["dependencies"],
	"rebaseWhen": "conflicted",
	"vulnerabilityAlerts": {
		"labels": ["security"],
		"assignees": ["@scriptex"]
	},
	"rangeStrategy": "replace",
	"major": {
		"automerge": false
	},
	"packageRules": [
		{
			"matchPackagePatterns": ["babylonjs"],
			"groupName": "babylonjs"
		},
		{
			"matchPackagePatterns": ["codersrank"],
			"groupName": "codersrank"
		},
		{
			"matchPackagePatterns": ["postcss"],
			"groupName": "postcss"
		},
		{
			"matchPackagePatterns": ["serwist"],
			"groupName": "serwist"
		},
		{
			"matchPackagePatterns": ["stylelint"],
			"groupName": "stylelint"
		},
		{
			"matchPackagePatterns": ["testing-library"],
			"groupName": "testing-library"
		}
	]
}
